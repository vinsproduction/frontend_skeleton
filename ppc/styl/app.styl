/* _________ IMPORT ________*/

@import 'normalize.css'

// _________ MIXINS _________

@require 'mixins'


// _______ КОНСТАНТЫ ________

// Путь до статики
$root = '../'

// Ширина контейнера с контентом
$mainWidth = 1265

// Главный шрифт
$mainFont = Ubuntu

// Цвета
$color-graydarker 	= lighten(#000, 13.5%)
$color-graydark 		= lighten(#000, 20%)
$color-gray 				= lighten(#000, 33.5%)
$color-graylight 		= lighten(#000, 60%)
$color-graylighter 	= lighten(#000, 80%)

/* _________ FONTS _________ */

import-font($root + 'fonts/ubuntu-r-webfont','Ubuntu')


//______ UNIQUE MIXINS _____

font-family(name)
	line-height 1
	font-family name, helvetica,verdana,arial,tahoma

font(size,name)
	//font-size unit(size*6.5, '%') convert px to percents
	font-size size
	font-family name

bg(filename, arguments=false)
	if !arguments
		arguments = no-repeat center center
	background url($root + 'img/' + filename) arguments


/* _________ GLOBAL _________

Все глобальные СТИЛИ кнопок, форм, ссылок, списков и тд.
описываются здесь
*/

p
	font 16px $mainFont

h1
	font 36px $mainFont
h2
	font 30px $mainFont
h3
	font 24px $mainFont
h4
	font 18px $mainFont
h5
	font 14px $mainFont
h6
	font 12px $mainFont

ul
	list-style-type none

a
	text-decoration none
	transition all 0.2s

input:focus, textarea:focus, select:focus, button:focus
	outline none

input:-webkit-autofill
	-webkit-box-shadow: 0 0 0px 50px #ededed inset




/*_________ MAIN __________*/


html
	height 100%

body
	height 100%
	overflow-x hidden
	overflow-y auto
	font-family $mainFont
	
	// bg 'bg.jpg', top center
	background-color $color-graydarker
	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover
	
body > main
	
	relative()
	min-height 100%
	width 100%
	
	// Фон с изображением
	bg 'bg.jpg', repeat-y center center
	// background-color $color-graydarker
	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover


/*_________ HEADER ___________*/

body > main > header
	z-index 2
	width 100%
	height 40px

	background $color-gray

	> .container
		height 100%
		max-width  ($mainWidth)px
		margin 0 auto
		background $color-graylight

		> .content
			block-inline()
			width 100%

			.logo
				margin 13px 0 0 10px
				a
					text-decoration none
					color #000

			nav#menu
				block-right()
				text-transform uppercase
				margin 10px 10px 0 0
				
				a 
					text-decoration none
					block-inline()
					relative()
					color #FFF

				ul
					block-inline()
					li
						float left
						margin 0 0 6px 0

						&.separator
							border-left solid 1px #d3d3d3
							size 1px 13px
							margin 0 5px

						&.navigate
							a
								border-bottom 1px dashed #FFF
					

			.logo
				block-left()

/*_________ FOOTER ___________*/

body > main > footer
	absolute()
	bottom 0
	z-index 2
	width 100%
	height 40px

	background $color-graydark

	> .container
		height 100%
		max-width  ($mainWidth)px
		margin 0 auto
		background $color-gray

		> .content
			block-inline()
			margin 14px


/*_________ SECTIONS _________*/

body > main > .sections

	clear both
	width 100%
	padding-bottom 40px // Height of the footer

	// Для всех секций!
	> section

		clear both
		relative()
		z-index 1
		width 100%
		block-inline()

		> .container
			relative()
			max-width  ($mainWidth)px
			height 100%
			margin 0 auto

			background #F2E5D5

			> .content
				// padding 50px 20px


/*___ PAGE CONTROLLER CLASS __*/

header-fixed()

	> main > header
		position fixed
		top 0

footer-none()

	> main >.sections
		padding-bottom 0

	> main > footer 
		display none

scroll-none()
	overflow-y hidden

bg-fixed()

	background-attachment fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover

	background-position center top
	background-repeat no-repeat

body
	
	header-fixed()
	
	&[data-page="not-found"]	
		// footer-none()

	&[data-page="ooops"]	
		// footer-none()

/* _________ PAGES _________*/


section[data-page="not-found"],section[data-page="ooops"]

	h1
		margin 20px 0 20px 0
		font 45px $mainFont
		font-weight bold
		color #FFF

main.view-index

	.sections
		
		padding-top 60px

		section
			.container
				padding 0 20px
				width ($mainWidth - 20*2)px
				.content
					p 
						margin 20px 0
						line-height 1.4

main.view-index-scroll

	@extends main.view-index

main.view-index-hash

	@extends main.view-index

main.view-index-render

	@extends main.view-index


main.view-fonts
	
	section
		.container
			
			.content
				padding 50px 20px

				h1
					margin 30px 0
					font-size 24px
				h2
					margin 30px 0
					font-size 47px
				.fonts
					width (1265 - 40)px
					overflow hidden
					p
						margin 15px 0
						background #FFF
						padding 0 10px
						border 1px solid gray
						//white-space nowrap
						.lowercase
							text-transform lowercase
						.uppercase
							text-transform uppercase

/* _________ POPUPS ________*/

@require 'popup'

/* _________ MEDIA _________ */

@require 'media'